<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/shift_item_layout"
    android:layout_height="120dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/shift_item"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardMaxElevation="30dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">


        <LinearLayout
            android:background="@drawable/style"
            android:orientation="vertical"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="2"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="0.7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:paddingLeft="10sp"
                        android:gravity="center_vertical"
                        android:layout_gravity="right"
                        android:textSize="12sp"
                        android:typeface="serif"
                        android:textStyle="bold"
                        android:text="SHIFT ID: "
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1.3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:id="@+id/shift_id"
                        android:textSize="14sp"
                        android:typeface="serif"
                        android:textStyle="bold"
                        android:text="12345678"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/shift_date"
                        android:background="@color/colorPrimary"
                        android:paddingLeft="10sp"
                        android:gravity="center"
                        android:layout_gravity="right"
                        android:textSize="12sp"
                        android:typeface="serif"
                        android:textStyle="bold"
                        android:text="Date"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="2"
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_weight="1.4"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="START TIME ::"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:typeface="serif"
                        android:textColor="@color/black"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.9"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/shift_start_time"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_toRightOf="@+id/tv_start_time"
                        android:gravity="center"
                        android:text="07:00 AM"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:typeface="serif" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1.4"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="END TIME ::"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:typeface="serif"
                        android:textColor="@color/black"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.9"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/shift_endtime"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="07:00"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:typeface="serif"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@+id/tv_start_time"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="2dp"/>
                </LinearLayout>



            </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>