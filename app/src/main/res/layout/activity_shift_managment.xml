<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".shift_managment.Shift_Managment_Activity">




    <LinearLayout
        android:weightSum="6"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="0.4"
            android:layout_width="match_parent"
            android:layout_height="0dp">
                <LinearLayout
                    android:background="@color/colorPrimary"
                    android:layout_weight="0.2"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_gravity="center"
                            android:background="@drawable/backarrow"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content">

                        </ImageView>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="2.5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:textSize="16sp"
                            android:layout_gravity="center"
                            android:id="@+id/sit_title_managment"
                            android:gravity="center_vertical"
                            android:textColor="@color/white"
                            android:text="SHIFT MANAGEMENT"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </TextView>

                    </LinearLayout>




                </LinearLayout>




            </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.4"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:text="GUARD PROFILE"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            </Button>

        </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.recyclerview.widget.RecyclerView
                android:orientation="vertical"
                android:id="@+id/ava_recyclview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4">
            <Button
                android:text="SHIFT DETIALS"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </Button>
        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_weight="0.4"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_weight="1.6"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <EditText
                    android:backgroundTint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:layout_height="match_parent">
         <Button
             android:text="EDIT"
             android:textColor="@color/white"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
         </Button>

                <TextView
                    android:text="Shift id"
                    android:id="@+id/shift_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <Button
                    android:text="Add Guard "
                    android:id="@+id/add_guard_on_shift"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </Button>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <androidx.recyclerview.widget.RecyclerView
                android:orientation="vertical"
                android:id="@+id/assigned_recyclview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>
    </LinearLayout>




</LinearLayout>